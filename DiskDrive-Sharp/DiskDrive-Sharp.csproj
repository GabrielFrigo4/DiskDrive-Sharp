<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>DiskDrive_Sharp</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageIcon>HardDrive.png</PackageIcon>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>DiskDrive-Sharp</Title>
    <Description>DiskDrive-Sharp is a .NET library that aims to bring classes and functions that facilitate the use, reading and writing of DiskDrive in .NET applications on Windows</Description>
    <PackageProjectUrl>https://github.com/GabrielFrigo4/DiskDrive-Sharp</PackageProjectUrl>
    <Copyright>MIT</Copyright>
    <RepositoryUrl>https://github.com/GabrielFrigo4/DiskDrive-Sharp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>DiskDrive;Windows</PackageTags>
    <VersionPrefix>1.1.0</VersionPrefix>
    <AssemblyVersion>$(VersionPrefix).0</AssemblyVersion>
    <FileVersion>$(VersionPrefix).0</FileVersion>
    <PackageReleaseNotes> - Update classes names
 - Add WORD, DWORD, QWORD and OWORD const
 - Add Size and Name in DiskDrivePartition struct
 - Add ReadRawData and WriteRawData in DiskDrivePartition struct</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Management" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="HardDrive.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
